<h1>Caravanas</h1>

<table>
  <tr>
    <th>Caravana</th>
    <th>Lugar</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th>Gmaps</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%= character.name %></td>
    <td><%= character.address %></td>
    <td><%= character.longitude %></td>
    <td><%= character.latitude %></td>
    <td><%= character.gmaps %></td>
    <td><%= link_to 'Mostrar', character %></td>
    <td><%= link_to 'Editar', edit_character_path(character) %></td>
    <td><%= link_to 'Eliminar', character, confirm: 'Esta seguro de eliminar la Caravana seleccionada?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva Caravana', new_character_path %>
